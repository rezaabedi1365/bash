
#https://adamtheautomator.com/disable-ipv6/

#show all network adapter which enable ipv6
Get-NetAdapterBinding | Where-Object ComponentID -EQ 'ms_tcpip6'


#disable in spesific Network Adapter
Disable-NetAdapterBinding -Name 'Ethernet' -ComponentID 'ms_tcpip6'


#disable in all Network Adapter
Disable-NetAdapterBinding -Name '*' -ComponentID 'ms_tcpip6'
